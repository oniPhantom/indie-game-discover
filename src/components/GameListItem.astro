---
import GenrePill from './GenrePill.astro';
import PriceBadge from './PriceBadge.astro';
import QualityBadge from './QualityBadge.astro';
import ScoreBadge from './ScoreBadge.astro';

interface Props {
  slug: string;
  title: string;
  headerImage: string;
  genres: string[];
  price: string;
  developer: string;
  reviewScore: string;
  reviewPercentage?: number;
  kansaiCatch?: string;
  qualityScore?: number;
  qualityGrade?: string;
}

const { slug, title, headerImage, genres, price, developer, reviewScore, reviewPercentage, kansaiCatch, qualityScore, qualityGrade } = Astro.props;

// kansaiCatchのフォールバック
const catchPhrase = kansaiCatch ?? title;
---

<a href={`/games/${slug}/`} class="list-item">
  <div class="thumbnail">
    <img src={headerImage} alt={title} width="460" height="215" loading="lazy" decoding="async" />
  </div>

  <div class="content">
    <div class="text-section">
      <h2 class="catch">{catchPhrase}</h2>
      <p class="title">{title}</p>
    </div>

    <div class="meta-section">
      <!-- ジャンルタグ（最大3つ） -->
      <div class="genres">
        {genres.slice(0, 3).map(genre => (
          <GenrePill label={genre} />
        ))}
      </div>

      <!-- スコアと価格 -->
      <div class="footer">
        {reviewPercentage !== undefined && (
          <ScoreBadge percentage={reviewPercentage} score={reviewScore} />
        )}

        <PriceBadge price={price} />

        <QualityBadge score={qualityScore} grade={qualityGrade} />
      </div>
    </div>
  </div>
</a>

<style>
  .list-item {
    display: flex;
    gap: 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding: 1rem;
  }

  /* ホバーアニメーション */
  .list-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(124, 58, 237, 0.4),
                0 0 20px rgba(124, 58, 237, 0.3);
  }

  /* サムネイル（左） */
  .thumbnail {
    flex-shrink: 0;
    width: 220px;
  }

  .thumbnail img {
    width: 100%;
    aspect-ratio: 460 / 215;
    object-fit: cover;
    border-radius: 8px;
  }

  /* コンテンツ（右） */
  .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0; /* flexboxでのtext-overflow対策 */
  }

  /* テキストセクション */
  .text-section {
    margin-bottom: 0.75rem;
  }

  /* 関西弁キャッチ（大きく目立つ） */
  .catch {
    font-size: 1.4rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 0.5rem 0;
    color: var(--text);
  }

  /* ゲームタイトル（小さめサブタイトル） */
  .title {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.7;
    font-weight: 500;
  }

  /* メタセクション */
  .meta-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  /* ジャンルタグ（pill形式） */
  .genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  /* フッター（スコア + 価格） */
  .footer {
    display: flex;
    gap: 0.75rem;
    align-items: center;
  }

  /* レスポンシブ: モバイルは縦積み */
  @media (max-width: 768px) {
    .list-item {
      flex-direction: column;
      gap: 1rem;
    }

    .thumbnail {
      width: 100%;
    }

    .catch {
      font-size: 1.2rem;
    }
  }
</style>
