---
interface Props {
  title: string;
  headerImage: string;
  slug: string;
  genres: string[];
  reviewPercentage: number;
}

const { title, headerImage, slug, genres, reviewPercentage } = Astro.props;
---

<section class="hero">
  <div class="hero-bg" style={`background-image: url(${headerImage})`}></div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <p class="hero-tagline">AIが発掘したインディーゲーム、関西弁で紹介するで！</p>
    <div class="hero-badge">✨ PICK UP</div>
    <h1 class="hero-title">{title}</h1>
    <div class="hero-genres">
      {genres.slice(0, 3).map((genre) => (
        <span class="genre-pill">{genre}</span>
      ))}
    </div>
    <a href={`/games/${slug}/`} class="hero-cta">
      詳しく見る →
    </a>
    <p class="hero-scroll">↓ もっとゲームを見る</p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    min-height: 50vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* 背景画像 */
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0.6);
  }

  /* グラデーションオーバーレイ（下から上に） */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      var(--bg) 0%,
      rgba(15, 15, 35, 0.8) 40%,
      rgba(15, 15, 35, 0.4) 70%,
      transparent 100%
    );
  }

  /* コンテンツ */
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }

  .hero-tagline {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 1rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    font-weight: 500;
  }

  .hero-badge {
    display: inline-block;
    background: rgba(124, 58, 237, 0.3);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
    margin-bottom: 1rem;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(124, 58, 237, 0.5);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.6);
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 1.5rem;
    text-shadow: 0 4px 16px rgba(0, 0, 0, 0.9);
    line-height: 1.2;
  }

  .hero-genres {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .genre-pill {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.6);
  }

  .hero-cta {
    display: inline-block;
    background: var(--accent);
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px rgba(124, 58, 237, 0.4);
  }

  .hero-cta:hover {
    background: #9333ea;
    box-shadow: 0 6px 24px var(--accent-glow);
    transform: translateY(-2px);
  }

  .hero-scroll {
    margin-top: 2rem;
    font-size: 0.9rem;
    color: white;
    opacity: 0.6;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.8);
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  /* タブレット以上 */
  @media (min-width: 768px) {
    .hero {
      min-height: 60vh;
    }

    .hero-content {
      text-align: left;
      align-self: flex-end;
      margin-bottom: 4rem;
      margin-left: 4rem;
    }

    .hero-tagline {
      font-size: 1.2rem;
    }

    .hero-title {
      font-size: 3.5rem;
    }

    .hero-genres {
      justify-content: flex-start;
    }

    .hero-cta {
      font-size: 1.2rem;
    }
  }

  /* デスクトップ大画面 */
  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4rem;
    }

    .hero-tagline {
      font-size: 1.3rem;
    }
  }
</style>
