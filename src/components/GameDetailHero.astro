---
interface Props {
  title: string;
  headerImage: string;
}

const { title, headerImage } = Astro.props;
---

<section class="game-hero">
  <div class="hero-bg" style={`background-image: url(${headerImage})`}></div>
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <h1 class="hero-title">{title}</h1>
  </div>
</section>

<style>
  .game-hero {
    position: relative;
    width: 100%;
    min-height: 40vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
  }

  /* 背景画像（半透明） */
  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.65;
  }

  /* グラデーションオーバーレイ（ダークテーマに溶け込む） */
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to top,
      var(--bg) 0%,
      rgba(15, 15, 35, 0.8) 40%,
      rgba(15, 15, 35, 0.5) 70%,
      transparent 100%
    );
  }

  /* コンテンツ */
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 900px;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 4px 16px rgba(0, 0, 0, 0.9);
    line-height: 1.2;
    margin: 0;
  }

  /* タブレット以上 */
  @media (min-width: 768px) {
    .game-hero {
      min-height: 50vh;
    }

    .hero-content {
      text-align: left;
      align-self: flex-end;
      margin-bottom: 3rem;
      margin-left: 3rem;
    }

    .hero-title {
      font-size: 3.5rem;
    }
  }

  /* デスクトップ大画面 */
  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4rem;
    }
  }
</style>
