---
interface Game {
  id: string;
  data: {
    title: string;
    headerImage: string;
    genres: string[];
  };
}

interface Props {
  currentSlug: string;
  currentGenres: string[];
  allGames: Game[];
}

const { currentSlug, currentGenres, allGames } = Astro.props;

// 関連ゲームを抽出
const relatedGames = allGames
  .filter(game => game.id !== currentSlug) // 自分自身を除外
  .map(game => {
    // 共通ジャンル数を計算
    const commonGenres = game.data.genres.filter(genre =>
      currentGenres.includes(genre)
    );
    return {
      ...game,
      commonGenreCount: commonGenres.length,
    };
  })
  .filter(game => game.commonGenreCount > 0) // 共通ジャンルがあるものだけ
  .sort((a, b) => b.commonGenreCount - a.commonGenreCount) // 共通ジャンル数順
  .slice(0, 3); // 最大3件
---

{relatedGames.length > 0 && (
  <section class="related-games">
    <h2 class="related-title">こんなゲームもおすすめやで</h2>
    <div class="related-grid">
      {relatedGames.map(game => (
        <a href={`/games/${game.id}/`} class="related-card">
          <img
            src={game.data.headerImage}
            alt={game.data.title}
            width="460"
            height="215"
            loading="lazy"
            decoding="async"
            class="related-image"
          />
          <div class="related-content">
            <h3 class="related-game-title">{game.data.title}</h3>
            <div class="related-genres">
              {game.data.genres.slice(0, 2).map(genre => (
                <span class="genre-pill">{genre}</span>
              ))}
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
)}

<style>
  .related-games {
    max-width: 1200px;
    margin: 3rem auto 2rem;
    padding: 0 1rem;
  }

  .related-title {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid var(--border);
    color: var(--text);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .related-card {
    display: block;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .related-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(124, 58, 237, 0.3),
                0 0 16px rgba(124, 58, 237, 0.2);
  }

  .related-image {
    width: 100%;
    aspect-ratio: 460 / 215;
    object-fit: cover;
  }

  .related-content {
    padding: 1rem;
  }

  .related-game-title {
    font-size: 1rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
    color: var(--text);
  }

  .related-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .genre-pill {
    display: inline-block;
    padding: 0.25rem 0.6rem;
    font-size: 0.75rem;
    background: rgba(124, 58, 237, 0.2);
    color: var(--text);
    border: 1px solid rgba(124, 58, 237, 0.4);
    border-radius: 12px;
    font-weight: 500;
  }

  /* レスポンシブ: モバイルは縦積み */
  @media (max-width: 768px) {
    .related-games {
      margin: 2rem auto 1.5rem;
    }

    .related-title {
      font-size: 1.3rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }
</style>
